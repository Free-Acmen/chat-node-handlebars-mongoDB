{{#section "css"}}
    <link rel="stylesheet" href="{{static '/css/sign.css'}}">
{{/section}}

{{! 头部引入}}
{{> headerSign}}

<section class="login-container">
    <h4 class="title">Sign in to Chat</h4>
    <div class="login-form">
        <form class="login" action="/sign-in?form=signIn" method="post">
            <label for="user-name">Username or Email Address</label>
            <input id="user-name" type="text" name="sign-name">
            <label for="user-pwd">
                Password
                <a href="/passward-reset">Forgot password?</a>
            </label>
            <input id="user-pwd" type="password" name="sign-pwd"> 
            <button id="sign-in" type="button">Sign in</button>
        </form>
    </div>
    <div>
        
    </div>
</section>

{{! 页脚引入}}
{{> footer}}

{{#section 'js'}}
    <script>
        $("#sign-in").click(function(){
            $(".login").submit();
        });
    </script>
{{/section}}